<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hpiz.reaction.com.reaction">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainMenuActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GameActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_game"
            android:parentActivityName=".MainMenuActivity"
            android:theme="@style/FullscreenTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="hpiz.reaction.com.reaction.MainMenuActivity" />
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".MainMenuActivity"
            android:theme="@style/FullscreenTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="hpiz.reaction.com.reaction.MainMenuActivity" />
        </activity>
        <activity
            android:name=".miniGames.surpriseReaction.SurpriseReaction"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Surprise Reaction"
            android:parentActivityName=".GameActivity"
            android:theme="@style/FullscreenTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="hpiz.reaction.com.reaction.miniGames.surpriseReaction.SurpriseReaction" />
        </activity>
        <activity
            android:name=".miniGames.surpriseNumberedReaction.SurpriseNumberedReaction"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Surprise Numbered Reaction"
            android:parentActivityName=".GameActivity"
            android:theme="@style/FullscreenTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="hpiz.reaction.com.reaction.miniGames.surpriseNumberedReaction.SurpriseNumberedReaction" />
        </activity>
        <activity
            android:name=".miniGames.dropReaction.DropReaction"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Surprise Numbered Reaction"
            android:parentActivityName=".GameActivity"
            android:theme="@style/FullscreenTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="hpiz.reaction.com.reaction.miniGames.dropReaction.DropReaction" />
        </activity>
        <activity
            android:name=".miniGames.wacAMoleReaction.WacAMoleReaction"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="WacAMole"
            android:parentActivityName=".GameActivity"
            android:theme="@style/FullscreenTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="hpiz.reaction.com.reaction.miniGames.wacAMoleReaction.WacAMoleReaction" />
        </activity>
    </application>

</manifest>